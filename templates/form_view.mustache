{{=<% %>=}}
<ion-view cache="false" id="nesto">

<%#rows%>
<ion-header [translucent] = "true">
    <ion-toolbar color="primary">
        <ion-title>
            Informacije o sesiji
        </ion-title>
    </ion-toolbar>
</ion-header>
    <ion-grid class="ion-margin">
        <%#.%>
        <ion-row>
            <ion-col><%header%></ion-col>
            <ion-col><%{value}%></ion-col>
        </ion-row>
        <%/.%>
    </ion-grid>
<%/rows%>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            // Get a reference to the HTML element to be refreshed
            var contentElem = document.getElementById('nesto');

            // Call the refreshContent function with the showSpinner parameter
            M.core.action_delegator.trigger(
                    'core/refresh-content',
                    {selector: '#my-content', showSpinner: true}
            );
        });
    </script>
</ion-view>