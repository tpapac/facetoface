{{=<% %>=}}
<ion-header [translucent] = 'true'>
    <ion-toolbar color="primary">
        <ion-title>
            Informacije o sesiji
        </ion-title>
    </ion-toolbar>
</ion-header>
    <ion-grid class="ion-margin">
        <%#table%>
        <%#.%>
            <ion-row>
                <ion-col>
                    <%{header}%>
                </ion-col>
                <ion-col>
                    <%{value}%>
                </ion-col>
            </ion-row>
        <%/.%>
        <%/table%>
    </ion-grid>
<ion-item>
    <ion-label position="floating">Please confirm that this is your manager's email address:</ion-label>
    <ion-input type="email" required class="ion-invalid"></ion-input>
    <ion-text color="danger">
        <small>Manager's email</small>
    </ion-text>
</ion-item>

<ion-item>
    <ion-label>Notification type</ion-label>
    <ion-select value="MDL_F2F_TEXT">
        <ion-select-option value="MDL_F2F_TEXT">Email Notification only</ion-select-option>
        <ion-select-option value="MDL_F2F_BOTH">Email Notification and iCalendar Appointment</ion-select-option>
        <ion-select-option value="MDL_F2F_ICAL">iCalendar Appointment only</ion-select-option>
    </ion-select>
</ion-item>

